{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {},
	"formatter": {},
	"linter": {
		"domains": {
			"next": "recommended"
		},
		"rules": {
			"recommended": true,
			"style": {
				"noRestrictedImports": {
					"level": "warn",
					"options": {
						"patterns": [
							{
								"group": ["../*", "../../*", "../../../*"],
								"message": "Use absolute imports via @/"
							}
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
