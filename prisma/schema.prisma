generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String @id @default(cuid())
  email                 String @unique
  name                  String?
  image                 String?
  emailVerified         Boolean @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime  @updatedAt
  sessions              Session[]
  accounts              Account[]
}

model Session {
  id                    String @id @default(cuid())
  expiresAt             DateTime
  token                 String @unique
  userId                String
  ipAddress             String?
  userAgent             String? 
  user                  User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
}

model Account {
  id                    String @id @default(cuid())
  userId                String 
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  hasError              Boolean   @default(false)
  lastError             String?
  lastErrorAt           DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt 
  user                  User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Verification {
  id                    String   @id @default(cuid())
  identifier            String
  value                 String
  expiresAt             DateTime
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@unique([identifier, value])
}